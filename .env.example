# ============================================
# JAPAN 225 TRADING BOT - ENVIRONMENT CONFIG
# ============================================
# Copy this to .env and fill in your values
# NEVER commit .env to git

# --- IG Markets API ---
IG_API_KEY=your_api_key_here
IG_USERNAME=your_username_here
IG_PASSWORD=your_password_here
IG_ACC_NUMBER=your_account_number_here
# "demo" for testing, "live" for real money
IG_ENV=demo

# --- Anthropic API ---
ANTHROPIC_API_KEY=sk-ant-your_key_here

# --- Telegram Bot ---
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# --- Mode ---
# paper = log trades but don't execute | live = real execution
TRADING_MODE=paper
# true = extra verbose logging
DEBUG=false
